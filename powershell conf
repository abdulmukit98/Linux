cd e:
New-Alias abc ls

function edge ([string]$arg1) 
{
	$loc = pwd
	cd 'C:\Program Files (x86)\Microsoft\Edge\Application\/'
	.\msedge.exe $arg1
	cd $loc
}

function nautilus() 
{
	$arg = pwd
	explorer.exe $arg 
}

