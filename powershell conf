#with parameter
function audacious([string]$arg1)
{
	if($arg1)
	{
		& 'C:\Program Files (x86)\Audacious\bin\audacious.exe' $arg1
	}
	else
	{
		& 'C:\Program Files (x86)\Audacious\bin\audacious.exe' 'E:\Music\'
	}
}


